@model IEnumerable<PremierLeague.Web.Models.Player>

<h2>PlayersList</h2>

@if (Model.Count() == 0)
{
    <p>Nincs adat az adatbázisban!</p>
}
else
{
    <table border="1">
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>Adatlap</th>
            <th>Törlés</th>
            <th>Módosítás</th>
        </tr>
        @foreach(var player in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => player.Name)</td>
            <td>@Html.ActionLink("[MUTATÁS]", "Details", new { id = player.Id})</td>
            <td>@Html.ActionLink("[TÖRLÉS]", "Remove", new { id = player.Id})</td>
            <td>@Html.ActionLink("[MÓDOSÍTÁS]", "Edit", new { id = player.Id})</td>
        </tr>
        }
    </table>
}
